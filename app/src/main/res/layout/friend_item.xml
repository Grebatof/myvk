<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/friend_civ_avatar"
        android:layout_width="@dimen/avatar_size"
        android:layout_height="@dimen/avatar_size"
        android:layout_margin="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/friend_txt_username"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/friend_txt_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="16dp"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/friend_civ_avatar"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/friend_txt_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:textSize="14dp"
        app:layout_constraintLeft_toRightOf="@id/friend_civ_avatar"
        app:layout_constraintTop_toBottomOf="@+id/friend_txt_username" />


    <View
        android:id="@+id/friend_img_online"
        android:layout_width="@dimen/online_size"
        android:layout_height="@dimen/online_size"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:background="@color/design_default_color_primary"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>